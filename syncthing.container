[Unit]
Description=Syncthing container

[Container]
ContainerName=syncthing
Image=docker.io/syncthing/syncthing:latest
AutoUpdate=registry
HostName=syncthing
UserNS=keep-id:uid=1500,gid=1500
Environment=PUID=1500
Environment=PGID=1500
PublishPort=8384:8384
PublishPort=22000:22000/tcp
PublishPort=22000:22000/udp
PublishPort=21027:21027/udp
Volume=%h/volumes/syncthing_data:/var/syncthing
Volume=/mnt/nas/android:/android_backup

[Install]
WantedBy=default.target


