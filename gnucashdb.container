[Unit]
Description=GnucashDB container

[Container]
ContainerName=gnucashdb
Image=docker.io/postgres:17-alpine
AutoUpdate=registry
Environment=POSTGRES_DB:'gnucash'
Secret=gnucashdb-user,type=env,target=POSTGRES_USER
Secret=gnucashdb-password,type=env,target=POSTGRES_PASSWORD
PublishPort=5438:5432
Volume=%h/volumes/gnucash_db:/var/lib/postgresql/data

[Install]
WantedBy=default.target


